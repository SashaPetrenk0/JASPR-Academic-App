<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_LEFT" prefHeight="548.0" prefWidth="817.0" spacing="20.0" style="-fx-background-color: #FFFF;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.jaspr.hr.demo.CreateQuizController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Create a quiz (as a teacher for now)" />
    <HBox alignment="CENTER_LEFT" prefHeight="44.0" prefWidth="777.0" style="-fx-background-radius: 50;">
        <children>
            <Button fx:id="returnToPrevious" onAction="#returnToPage" text="Return" />
            <Label />
        </children>
    </HBox>

    <Label fx:id="successMessage" text="" visible="false" />
    <VBox maxHeight="67.0" maxWidth="100.0" prefHeight="55.0" prefWidth="100.0" />
    <VBox prefHeight="200.0" prefWidth="100.0" />
    <HBox alignment="TOP_RIGHT" maxWidth="200.0" prefHeight="17.0" prefWidth="523.0" />
    <HBox maxWidth="828.0" prefHeight="17.0" prefWidth="500.0">
        <children>

            <Label prefHeight="17.0" prefWidth="606.0" text="How many questions do you want?" />
            <Label prefHeight="17.0" prefWidth="784.0" text="What is the title of your quiz?" />
        </children>
    </HBox>
    <HBox alignment="CENTER_LEFT" maxWidth="797.0" prefHeight="35.0" prefWidth="676.0" spacing="70.0">
        <children>
            <TextField fx:id="lengthField" nodeOrientation="LEFT_TO_RIGHT" prefHeight="35.0" prefWidth="230.0" promptText="Name" style="-fx-background-radius: 50;">
                <font>
                    <Font name="Telugu Sangam MN" size="13.0" />
                </font>
            </TextField>
            <TextField fx:id="lengthField1" nodeOrientation="LEFT_TO_RIGHT" prefHeight="35.0" prefWidth="289.0" promptText="Name" style="-fx-background-radius: 50;">
                <font>
                    <Font name="Telugu Sangam MN" size="13.0" />
                </font>
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </TextField>
        </children>
    </HBox>

    <Label text="What is the title of your quiz" />
    <TextField fx:id="titleField" promptText="Name" style="-fx-background-radius: 50;" />
    <Label text="What is the topic of your quiz" />
    <TextField fx:id="topicField" promptText="Name" />
    <Label text="What is the description of your quiz" />
    <TextField fx:id="descriptionField" promptText="Name" />
    <HBox alignment="CENTER" prefHeight="44.0" prefWidth="777.0" style="-fx-background-radius: 50;">
        <children>
            <Label />

            <Button fx:id="createQuiz" disable="false" onAction="#onCreateQuiz" prefHeight="35.0" prefWidth="445.0" style="-fx-background-radius: 50; -fx-background-color: #C1F3B9;" text="Next">
                <font>
                    <Font name="Telugu Sangam MN Bold" size="13.0" />
                </font>
            </Button>
        </children>
    </HBox>
    <HBox prefHeight="60.0" prefWidth="777.0" />


</VBox>
