<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_LEFT" prefHeight="548.0" prefWidth="817.0" spacing="20.0" style="-fx-background-color: #FFFF;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jaspr.hr.demo.CreateQuizController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox alignment="CENTER_LEFT" prefHeight="44.0" prefWidth="777.0" style="-fx-background-radius: 50;">
        <children>
            <Button fx:id="returnToPrevious" onAction="#returnToPage" text="Return" />
            <Label />
        </children>
    </HBox>

                <Label text="Create a multiple choice quiz">
      <VBox.margin>
         <Insets left="20.0" />
      </VBox.margin>
   </Label>
    <HBox alignment="TOP_RIGHT" maxWidth="200.0" prefHeight="17.0" prefWidth="523.0" />
    <HBox maxWidth="828.0" prefHeight="17.0" prefWidth="500.0">
        <children>
      
                <Label text="What is the title of your quiz" />
        </children>
      <VBox.margin>
         <Insets left="20.0" />
      </VBox.margin>
    </HBox>
    <HBox alignment="CENTER_LEFT" maxWidth="797.0" prefHeight="35.0" prefWidth="676.0" spacing="70.0">
        <children>
          <TextField fx:id="titleField" prefHeight="26.0" prefWidth="692.0" promptText="Name" style="-fx-background-radius: 50;">
            <HBox.margin>
               <Insets left="20.0" />
            </HBox.margin>
         </TextField>
        </children>
    </HBox>

      <Label prefHeight="17.0" prefWidth="606.0" text="How many questions do you want?">
      <VBox.margin>
         <Insets left="20.0" />
      </VBox.margin>
   </Label>
      <TextField fx:id="lengthField" nodeOrientation="LEFT_TO_RIGHT" prefHeight="35.0" prefWidth="670.0" promptText="Name" style="-fx-background-radius: 50;">
          <font>
              <Font name="Telugu Sangam MN" size="13.0" />
          </font>
      <VBox.margin>
         <Insets left="20.0" />
      </VBox.margin>
      </TextField>
    <Label text="What is the topic of your quiz">
      <VBox.margin>
         <Insets left="20.0" />
      </VBox.margin></Label>
    <TextField fx:id="topicField" promptText="Name">
      <VBox.margin>
         <Insets left="20.0" />
      </VBox.margin></TextField>
    <Label text="What is the description of your quiz">
      <VBox.margin>
         <Insets left="20.0" />
      </VBox.margin></Label>
    <TextField fx:id="descriptionField" promptText="Name">
      <VBox.margin>
         <Insets left="20.0" />
      </VBox.margin></TextField>
    <HBox alignment="CENTER" prefHeight="44.0" prefWidth="777.0" style="-fx-background-radius: 50;">
        <children>
            <Label />

            <Button fx:id="createQuiz" disable="false" onAction="#onCreateQuiz" prefHeight="35.0" prefWidth="445.0" style="-fx-background-radius: 50; -fx-background-color: #C1F3B9;" text="Next">
                <font>
                    <Font name="Telugu Sangam MN Bold" size="13.0" />
                </font>
            </Button>
        </children>
    </HBox>
    <HBox prefHeight="60.0" prefWidth="777.0" />


</VBox>
