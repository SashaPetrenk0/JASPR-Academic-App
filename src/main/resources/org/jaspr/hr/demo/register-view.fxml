<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="460.0" prefWidth="780.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.jaspr.hr.demo.RegisterController">

    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <Label text="Select Your Role:" />

            <!-- Drop Box Menu Creation -->
            <ComboBox fx:id="roleComboBox" onAction="#onRoleSelected" prefHeight="26.0" prefWidth="183.0" style="-fx-background-radius: 50;" />

            <Button fx:id="returnToPrevious" onAction="#returnToHomePage" prefHeight="26.0" prefWidth="120.0" style="-fx-background-radius: 50; -fx-background-color: #E0E0E0;" text="Return" />

            <VBox fx:id="studentForm" spacing="20.0">
                <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-font-size: 18px;" text="Student Sign Up">
               <font>
                  <Font name="Telugu Sangam MN" size="13.0" />
               </font></Label>
                <TextField fx:id="nameFieldStudent" prefHeight="67.0" prefWidth="740.0" promptText="Name" style="-fx-background-radius: 50;" />
                <TextField fx:id="ageFieldStudent" promptText="Age" style="-fx-background-radius: 50;" />
                <TextField fx:id="studentIDField" promptText="Student ID" style="-fx-background-radius: 50;" />
                <TextField fx:id="emailFieldStudent" promptText="Email" style="-fx-background-radius: 50;" />
                <TextField fx:id="passwordFieldStudent" promptText="Password" style="-fx-background-radius: 50;" />
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                      <Button alignment="CENTER" contentDisplay="CENTER" onAction="#onSubmitClicked" prefHeight="26.0" prefWidth="170.0" style="-fx-background-radius: 50; -fx-background-color: #A8DDDC;" text="Submit" textFill="WHITE" />
               </children>
            </HBox>
                <Label fx:id="successfulSignUpLabelStudent" text="" visible="false" />
            </VBox>

            <VBox fx:id="teacherForm" managed="false" visible="false">
                <Label style="-fx-font-size: 18px;" text="Teacher Sign Up" />
                <TextField fx:id="nameFieldTeacher" promptText="Name" />
                <TextField fx:id="ageFieldTeacher" promptText="Age" />
                <TextField fx:id="teacherIDField" promptText="Teacher ID" />
                <TextField fx:id="emailFieldTeacher" promptText="Email" />
                <TextField fx:id="passwordFieldTeacher" promptText="Password" />
                <Button onAction="#onSubmitClicked" text="Submit" />
                <Label fx:id="successfulSignUpLabelTeacher" text="" visible="false" />
            </VBox>

            <VBox fx:id="parentForm" managed="false" visible="false">
                <Label style="-fx-font-size: 18px;" text="Parent Sign Up" />
                <TextField fx:id="nameFieldParent" promptText="Name" />
                <TextField fx:id="childNameField" promptText="Child Name" />
                <TextField fx:id="childIDField" promptText="Child Student ID" />
                <TextField fx:id="emailFieldParent" promptText="Email" />
                <TextField fx:id="passwordFieldParent" promptText="Password" />
                <Button onAction="#onSubmitClicked" text="Submit" />
                <Label fx:id="successfulSignUpLabelParent" text="" visible="false" />
            </VBox>

            <VBox fx:id="adminForm" managed="false" visible="false">
                <Label style="-fx-font-size: 18px;" text="Admin Sign Up" />
                <TextField fx:id="nameFieldAdmin" promptText="Name" />
                <TextField fx:id="ageFieldAdmin" promptText="Age" />
                <TextField fx:id="adminIDField" promptText="Admin ID" />
                <TextField fx:id="emailFieldAdmin" promptText="Email" />
                <TextField fx:id="passwordFieldAdmin" promptText="Password" />
                <Button onAction="#onSubmitClicked" text="Submit" />
                <Label fx:id="successfulSignUpLabelAdmin" text="" visible="false" />
            </VBox>

        </VBox>
    </center>

</BorderPane>
