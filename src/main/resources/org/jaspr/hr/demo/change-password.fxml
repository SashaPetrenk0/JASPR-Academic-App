<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.jaspr.hr.demo.ChangePassword">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Change Password!" style="-fx-font-size: 24px;"/>
    <TextField fx:id="emailField" promptText = "Email" />
    <TextField fx:id="currentPasswordField" promptText = "Current Password" />
    <TextField fx:id="newPasswordField" promptText = "New Password" />
    <Button fx:id="ChangePwd" text = "Submit" onAction="#onChangePasswordClicked" />
    <Label fx:id="ChangePwdError" text="" visible="false" />

    <Button fx:id="ReturnButton" text="Return" onAction="#onReturnClicked" />


</VBox>

