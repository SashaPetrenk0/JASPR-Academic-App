<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.chart.PieChart?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.jaspr.hr.demo.StudentViewResultsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Your Quizzes"/>
    <ComboBox fx:id="resultDropdown" onAction="#onQuizSelected" prefHeight="26.0" prefWidth="212.0" style="-fx-background-radius: 50; -fx-background-color: #F0F8FF; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 6, 0.3, 0, 2);">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </ComboBox>

    <VBox fx:id="allResultsBox" >
        <TableView fx:id="allResults" xmlns:fx="http://javafx.com/fxml" prefWidth="400">
            <columns>
                <TableColumn fx:id="titleColumn" text="Quiz" prefWidth="200"/>
                <TableColumn fx:id="gradeColumn" text="Grade" prefWidth="100"/>
            </columns>
        </TableView>
    </VBox>

    <VBox fx:id="specificResultsBox" >
        <Label text="Viewing question breakdown"/>
        <VBox>
            <Label text="pie chart" />
            <PieChart fx:id="pieChart" layoutX="50" layoutY="50" prefHeight="400" prefWidth="400"/>

        </VBox>
        <VBox>
            <Label text="Question breakdown"/>
            <TableView fx:id="questionResults">
                <TableColumn fx:id="questionColumn" text="Question" prefWidth="200"/>
                <TableColumn fx:id="answerColumn" text="Correct Answer" prefWidth="100"/>
                <TableColumn fx:id="questionGradeColumn" text="Grade" prefWidth="100"/>

            </TableView>
        </VBox>


    </VBox>









</VBox>

