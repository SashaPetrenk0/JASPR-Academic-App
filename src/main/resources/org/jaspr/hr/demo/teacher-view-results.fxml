<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.jaspr.hr.demo.TeacherViewResultsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox spacing="20.0" fx:id="selectionBox" visible="true">
        <Label text="Select what analytics you would like to view" style="-fx-font-size: 30px;"/>
        <VBox>
            <Label text="Select Classroom:" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="classroomComboBox" />
        </VBox>
        <VBox>
            <Label text="Quiz Selected:" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="quizSelection" />
        </VBox>

        <Button fx:id="generateAnalytics" text="Generate Analytics" onAction="#generateAnalytics" />

        <Button fx:id="returnToPrevious" text="Return" onAction="#returnToTeacherDashboard" />
    </VBox>



    <VBox fx:id="allResultsBox" visible="false" managed="false">
        <Label text="All Quiz Analytics" style="-fx-font-size: 30px;"/>
        <Label text = "all rtesult"/>
        <Button text="Return" onAction="#returnToAnalyticsSelection" />
    </VBox>

    <VBox fx:id="specificResultsBox" visible="false" managed="false">
        <Label fx:id="QuizTitle" style="-fx-font-size: 30px;"/>
        <Label text = "specific quiz"/>
        <BarChart fx:id="barChart" title="Question Accuracy"
                  prefHeight="400" prefWidth="600">
            <xAxis>
                <CategoryAxis label="Question ID" />
            </xAxis>
            <yAxis>
                <NumberAxis label="Percentage Correct" />
            </yAxis>
        </BarChart>

        <TableView fx:id="quizResultTable" prefHeight="500">
            <columns>
                <TableColumn fx:id="studentColumn" text="Student" prefWidth="150"/>
                <TableColumn fx:id="gradeColumn" text="Score" prefWidth="100"/>
                <TableColumn fx:id="percentageColumn" text="Percentage" prefWidth="100"/>
            </columns>
        </TableView>

        <PieChart fx:id="pieChart" layoutX="50" layoutY="50" prefHeight="400" prefWidth="400"/>

        <ListView fx:id="ranking"/>



        <Button text="Return" onAction="#returnToAnalyticsSelection" />
    </VBox>

</VBox>

