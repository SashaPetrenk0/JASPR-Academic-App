<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" fitToHeight="true" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.jaspr.hr.demo.TeacherViewResultsController">
    <content>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #fff;">
            <padding>
                <Insets top="20.0" bottom="20.0" left="20.0" right="20.0"/>
            </padding>
            <StackPane alignment="TOP_LEFT" maxWidth="760.0" prefWidth="760.0">
                <children>
                    <!-- Background Decorative Circles -->
                    <Pane maxWidth="760.0" prefHeight="0"> <!-- height forced to 0 so no top gap -->
                        <children>
                            <Circle fill="#d7909080" layoutX="34.0" layoutY="29.0" radius="96.0" translateX="-20.0" translateY="10.0" />
                            <Circle fill="#ffb74d80" layoutX="663.0" layoutY="107.0" radius="84.0" translateX="80.0" translateY="-100.0" />
                            <Circle fill="#ffd34f5f" layoutX="639.0" layoutY="94.0" radius="47.0" translateX="40.0" translateY="-30.0" />
                            <Circle fill="#a8dadc80" layoutX="66.0" layoutY="530.0" radius="54.0" translateX="40.0" translateY="-30.0" />
                            <Circle fill="#86c5ff80" layoutX="-19.0" layoutY="529.0" radius="85.0" translateX="40.0" translateY="-30.0" />
                        </children>
                    </Pane>

                    <VBox alignment="TOP_CENTER" spacing="20.0" maxWidth="760.0" VBox.vgrow="ALWAYS">
                        <!-- Return Button -->
                        <HBox prefWidth="760.0" style="-fx-background-radius: 50;">
                            <children>
                                <Button fx:id="returnToPrevious" onAction="#returnToTeacherDashboard"
                                        text="← Return"
                                        style="-fx-background-color: #D3D3D3; -fx-hover-background-color: #B0B0B0; -fx-text-fill: #000000; -fx-font-family: 'Telugu Sangam MN Bold'; -fx-font-size: 12px; -fx-background-radius: 10;">
                                    <font>
                                        <Font name="Arial" size="14.0"/>
                                    </font>
                                    <padding>
                                        <Insets bottom="5.0" left="10.0" right="15.0" top="5.0"/>
                                    </padding>
                                </Button>
                            </children>
                        </HBox>

                        <!-- Selection Section -->
                        <VBox fx:id="selectionBox" alignment="CENTER" maxWidth="600.0" spacing="20.0" visible="true">
                            <Label style="-fx-font-size: 30px;" text="Select what analytics you would like to view" />

                            <VBox alignment="CENTER">
                                <Label style="-fx-font-weight: bold;" text="Select Classroom:" />
                                <ComboBox fx:id="classroomComboBox" prefHeight="26.0" prefWidth="212.0"
                                          style="-fx-background-radius: 50; -fx-background-color: #F0F8FF; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 6, 0.3, 0, 2);" />
                            </VBox>

                            <VBox alignment="CENTER">
                                <Label style="-fx-font-weight: bold;" text="Quiz Selected:" />
                                <ComboBox fx:id="quizSelection" prefHeight="26.0" prefWidth="212.0"
                                          style="-fx-background-radius: 50; -fx-background-color: #F0F8FF; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 6, 0.3, 0, 2);" />
                            </VBox>

                            <Button fx:id="generateAnalytics" onAction="#generateAnalytics"
                                    text="Generate Analytics"
                                    style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #C1F3B9;"
                                    prefHeight="50.0" prefWidth="250.0">
                                <font>
                                    <Font name="System Bold" size="13.0"/>
                                </font>
                            </Button>
                        </VBox>

                        <!-- Results Section -->
                        <VBox fx:id="specificResultsBox" alignment="TOP_CENTER" maxWidth="600.0"
                              visible="false" managed="false" spacing="20.0">
                            <Label fx:id="QuizTitle" style="-fx-font-size: 30px;" />
                            <Label text="specific quiz" />
                            <BarChart fx:id="barChart" prefHeight="900" prefWidth="600" title="Question Accuracy">
                                <xAxis>
                                    <CategoryAxis label="Question ID"/>
                                </xAxis>
                                <yAxis>
                                    <NumberAxis label="Percentage Correct"/>
                                </yAxis>
                            </BarChart>

                            <TableView fx:id="quizResultTable" prefHeight="300">
                                <columns>
                                    <TableColumn fx:id="studentColumn" prefWidth="150" text="Student"/>
                                    <TableColumn fx:id="gradeColumn" prefWidth="100" text="Score"/>
                                    <TableColumn fx:id="percentageColumn" prefWidth="100" text="Percentage"/>
                                </columns>
                            </TableView>

                            <PieChart fx:id="pieChart" prefHeight="300" prefWidth="400" />
                            <ListView fx:id="ranking" prefHeight="200" />
                            <Button onAction="#returnToAnalyticsSelection" text="Return" />
                        </VBox>
                    </VBox>
                </children>
            </StackPane>
        </VBox>
    </content>
</ScrollPane>
