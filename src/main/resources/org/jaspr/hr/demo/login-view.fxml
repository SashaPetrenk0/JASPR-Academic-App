<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.jaspr.hr.demo.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Please enter your login details!" style="-fx-font-size: 18px;"/>
    <TextField fx:id="loginEmailField" promptText = "Email" />
    <TextField fx:id="loginPasswordField" promptText = "Password" />
    <Button fx:id="LoginButton" text = "Submit" onAction="#onLoginClicked" />
    <Label fx:id="loginEmptyError" text="" visible="false" />
    <Label fx:id="loginIncorrectError" text="" visible="false" />

</VBox>

