<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.jaspr.hr.demo.ClassroomCreationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Create a classroom" style="-fx-font-size: 30px;"/>
    <TextField fx:id="classroomNumber" promptText = "Classroom Number" />
    <TextField fx:id="classroomCapacity" promptText = "Number of Students in the Class" />
    <Button fx:id="createClassroom" text="Create Classroom" onAction="#createClassroom" />
    <Button fx:id="returnToPrevious" text="Return" onAction="#returnToClassrooms" />


</VBox>

