<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.jaspr.hr.demo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Hi, welcome to our app!" style="-fx-font-size: 18px;"/>
    <Label text="Would you like to login or sign up?" />
    <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="loginButton" text = "Login" onAction="#onLoginButtonClick"/>
            <Button fx:id="signUpButton" text = "Sign Up" onAction = "#onSignUpButtonClick"/>
    </HBox>

</VBox>
