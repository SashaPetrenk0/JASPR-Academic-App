<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ListView?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.jaspr.hr.demo.StudentDashboardController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox>
        <Label fx:id="personalisedGreeting" text="Hi" style="-fx-font-size: 18px;"/>
        <Button fx:id="profileButton" text="View Profile" onAction="#onProfileClick"/>

    </HBox>

    <Label text="student view"/>

    <Button fx:id="createQuiz" text="Create Quiz" maxWidth="Infinity" onAction="#onAdd"/>
    <Button fx:id="takeQuiz" text="Take Quiz" maxWidth="Infinity" onAction="#onTakeQuiz"/>

    <VBox xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="CENTER">
        <Label text="My Quizzes"/>
        <ListView fx:id="createdQuizzesLists"/>

    </VBox>

    <VBox xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="CENTER">
        <Label text="Assigned Quizzes"/>
        <ListView fx:id="assignedQuizzesList"/>

    </VBox>

    <Button fx:id="logoutButton" text="Logout" onAction="#onLogoutClicked"/>
</VBox>
