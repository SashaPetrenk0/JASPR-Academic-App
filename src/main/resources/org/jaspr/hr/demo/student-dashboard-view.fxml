<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" minWidth="700.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.jaspr.hr.demo.StudentDashboardController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox>
      <children>
         <Label fx:id="personalisedGreeting1" style="-fx-font-size: 18px;" text="Hi" />
      </children>
   </HBox>

    <HBox>
        <Button fx:id="profileButton" onAction="#onProfileClick" text="View Profile" />

    </HBox>

    <Label text="student view" />

    <Button fx:id="createQuiz" maxWidth="Infinity" onAction="#onAdd" text="Create Quiz" />
    <Button fx:id="takeQuiz" maxWidth="Infinity" onAction="#onTakeQuiz" text="Take Quiz" />

    <VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml">
        <Label text="My Quizzes" />
        <ListView fx:id="createdQuizzesLists" />

    </VBox>

    <VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml">
        <Label text="Assigned Quizzes" />
        <ListView fx:id="assignedQuizzesList" />

    </VBox>

    <Button fx:id="logoutButton" onAction="#onLogoutClicked" text="Logout" />
</VBox>
