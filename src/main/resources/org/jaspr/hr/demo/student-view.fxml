<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.jaspr.hr.demo.StudentController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Student Sign Up" style="-fx-font-size: 18px;" />
    <TextField fx:id="nameField" promptText = "Name" />
    <TextField fx:id="ageField" promptText = "Age" />
    <TextField fx:id="emailField" promptText = "Email" />
    <TextField fx:id="passwordField" promptText = "Password" />
    <Button text = "Submit" onAction="#onSubmitClicked" />
</VBox>