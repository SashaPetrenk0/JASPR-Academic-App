<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="760.0" style="-fx-background-color: #FFFFFF;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.jaspr.hr.demo.AssignUsersToClassController">

    <!-- Padding around the entire scene -->
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>

    <!-- Center content -->
    <center>
        <VBox alignment="CENTER" spacing="30.0">
            <!-- Title -->
            <Label style="-fx-font-size: 30px;" text="Assign Teachers and Students to a Classroom">
            <font>
               <Font name="Telugu Sangam MN" size="13.0" />
            </font></Label>

            <!-- Grey Bubble Wrapper -->
            <VBox prefHeight="342.0" prefWidth="860.0" spacing="20.0" style="-fx-background-color: #F0F0F0; -fx-background-radius: 20; -fx-padding: 30;                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0.2, 0, 4);">
            <HBox prefHeight="40.0" prefWidth="800.0">
               <children>
   
                             <!-- Classroom Selector -->
                       <VBox alignment="CENTER_LEFT" opacity="0.85" prefHeight="156.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #a5d6a7; -fx-background-radius: 12; -fx-padding: 15;                                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.2, 0, 2);">
                           <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Select Classroom:" />
                           <ComboBox fx:id="classroomComboBox" prefHeight="30.0" prefWidth="785.0" style="-fx-background-color: #f5f5f5; -fx-background-radius: 10;" />
                       </VBox>
               </children>
            </HBox>
            <HBox prefHeight="0.0" prefWidth="800.0">
               <children>
      
                          <!-- Teacher Selector -->
                       <VBox prefHeight="56.0" prefWidth="387.0" spacing="8.0" style="-fx-background-color: #a5d6a7; -fx-background-radius: 12; -fx-padding: 15;                                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.2, 0, 2);">
                           <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Select Teacher:" />
                           <VBox fx:id="teacherRadioList" spacing="10.0" />
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                       </VBox>
   
                          <!-- Student Selector -->
                       <VBox prefHeight="56.0" prefWidth="409.0" style="-fx-background-color: #a5d6a7; -fx-background-radius: 12; -fx-padding: 15;                                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.2, 0, 2);">
                           <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Select Students:" />
                           <VBox fx:id="studentVBox" spacing="10.0" />
                       </VBox>
               </children>
            </HBox>
            </VBox>

            <!-- Assign Button -->
            <Button fx:id="assignUsers" onAction="#assignUsers" prefHeight="43.0" prefWidth="796.0" style="-fx-background-radius: 30; -fx-background-color: #A8DDDC;" text="Assign" textFill="WHITE">
                <font>
                    <Font name="Telugu Sangam MN Bold" size="16.0" />
                </font>
            </Button>
        </VBox>
    </center>
</BorderPane>
