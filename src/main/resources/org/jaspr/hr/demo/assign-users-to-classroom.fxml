            <!-- Foreground Content -->
            <VBox alignment="CENTER" spacing="30.0">
            <VBox alignment="BOTTOM_RIGHT" prefHeight="0.0" prefWidth="1057.0">
               <children>
                  <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="351.0" text="Search..." textFill="#00000072">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <Line endX="53.82208251953125" opacity="0.44" startX="-255.47787475585938" startY="-1.4483928680419922E-4">
                     <VBox.margin>
                        <Insets right="40.0" />
                     </VBox.margin>
                  </Line>
               </children>
            </VBox>
            <HBox prefHeight="51.0" prefWidth="1057.0">
               <children>
                      <Label alignment="TOP_LEFT" style="-fx-font-size: 30px;" text="Please make assignment selection:">
                          <font>
                              <Font name="Telugu Sangam MN" size="13.0" />
                          </font>
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                      </Label>
               </children>
            </HBox>

                <VBox prefHeight="246.0" prefWidth="1057.0" spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 20; -fx-padding: 30;">

                    <HBox prefHeight="173.0" prefWidth="997.0">
                        <children>
                            <VBox alignment="CENTER_LEFT" opacity="0.85" prefHeight="141.0" prefWidth="997.0" spacing="20.0" style="-fx-background-color: #A8DDDC; -fx-background-radius: 12; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.2, 0, 2);">
